{
  "name": "@mozilla/rally",
  "version": "0.7.0",
  "description": "The Rally partner support library.",
  "main": "rally.js",
  "type": "module",
  "scripts": {
    "build": "npm run glean && tsc -p ./src",
    "glean": "npm run glean-metrics && npm run glean-docs",
    "glean-metrics": "glean translate ./metrics.yaml ./pings.yaml -f javascript -o public/generated",
    "glean-docs": "glean translate ./metrics.yaml ./pings.yaml -f markdown -o docs",
    "lint-glean": "glean glinter ./metrics.yaml ./pings.yaml"
  },
  "devDependencies": {
    "@mozilla/glean": "^0.18.1",
    "typescript": "^4.3.5",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla-rally/rally-core-addon.git",
    "directory": "support"
  },
  "keywords": [],
  "author": "Mozilla Rally team",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla-rally/rally-core-addon/issues"
  },
  "homepage": "https://github.com/mozilla-rally/rally-core-addon#readme"
}
