{
  "name": "@mozilla/rally",
  "version": "0.7.0",
  "description": "The Rally partner support library.",
  "main": "rally.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p ./src",
    "test:unit": "jest",
    "glean": "npm run glean-metrics && npm run glean-docs",
    "glean-metrics": "glean translate ./metrics.yaml ./pings.yaml -f javascript -o public/generated",
    "glean-docs": "glean translate ./metrics.yaml ./pings.yaml -f markdown -o docs",
    "lint-glean": "glean glinter ./metrics.yaml ./pings.yaml"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx",
      "node"
    ],
    "moduleNameMapper": {
      "^@mozilla/glean/webext$": "<rootDir>/node_modules/@mozilla/glean/dist/webext/index/webext.js",
      "^@mozilla/glean/webext/plugins/encryption$": "<rootDir>/node_modules/@mozilla/glean/dist/webext/plugins/encryption.js",
      "^@mozilla/glean/webext/private/metrics/(.*)$": "<rootDir>/node_modules/@mozilla/glean/dist/webext/core/metrics/types/$1.js",
      "^@mozilla/glean/webext/private/ping$": "<rootDir>/node_modules/@mozilla/glean/dist/webext/core/pings/ping_type.js",
      "^jose/jwe/compact/encrypt$": "<rootDir>/node_modules/jose/dist/node/cjs/jwe/compact/encrypt.js",
      "^jose/jwk/parse": "<rootDir>/node_modules/jose/dist/node/cjs/jwk/parse.js",
      "^jose/jwk/thumbprint": "<rootDir>/node_modules/jose/dist/node/cjs/jwk/thumbprint.js"
    },
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.js$": "babel-jest"
    },
    "setupFiles": [
      "jest-webextension-mock"
    ],
    "transformIgnorePatterns": [
      "/node_modules/@mozilla/rally.js"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "@mozilla/glean": "^0.18.1",
    "babel-jest": "^27.0.6",
    "jest": "^27.0.6",
    "jest-transform-stub": "^2.0.0",
    "jest-webextension-mock": "^3.7.17",
    "sinon-chrome": "^3.0.1",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla-rally/rally-core-addon.git",
    "directory": "support"
  },
  "keywords": [],
  "author": "Mozilla Rally team",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla-rally/rally-core-addon/issues"
  },
  "homepage": "https://github.com/mozilla-rally/rally-core-addon#readme"
}
