{
  "name": "@mozilla/rally",
  "version": "1.0.0",
  "description": "The Rally partner support library.",
  "main": "rally.js",
  "type": "module",
  "scripts": {
    "build": "tsc -p ./src",
    "test:unit": "jest"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "ts",
      "tsx",
      "node"
    ],
    "transform": {
      ".+\\.(css|styl|less|sass|scss|png|jpg|ttf|woff|woff2)$": "jest-transform-stub",
      "^.+\\.js$": "babel-jest"
    },
    "setupFiles": [
      "jest-webextension-mock"
    ],
    "transformIgnorePatterns": [
      "/node_modules/@mozilla/rally.js"
    ]
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.14.8",
    "babel-jest": "^27.0.6",
    "jest": "^27.0.6",
    "jest-transform-stub": "^2.0.0",
    "jest-webextension-mock": "^3.7.17",
    "sinon-chrome": "^3.0.1",
    "ts-jest": "^27.0.4",
    "typescript": "^4.3.5",
    "webextension-polyfill-ts": "^0.26.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mozilla-rally/rally-core-addon.git",
    "directory": "support"
  },
  "keywords": [],
  "author": "Mozilla Rally team",
  "license": "MPL-2.0",
  "bugs": {
    "url": "https://github.com/mozilla-rally/rally-core-addon/issues"
  },
  "homepage": "https://github.com/mozilla-rally/rally-core-addon#readme"
}
